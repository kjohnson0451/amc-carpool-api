{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": ["eslint:recommended", "airbnb"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "vars-on-top": "off",
    "no-var": "error",
    "object-shorthand": "error",
    "import/extensions": "off",
    "import/no-unresolved": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "settings": {
        "react": {
          "version": "999.999.999"
        }
      },
      "rules": {
        "react/prop-types": "off"
      }
    }
  ]
}
